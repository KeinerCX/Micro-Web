// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  output   = "../node_modules/@prisma/client"
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model betaCode {
  id String @id
}

enum Apps {
  MOBILE
  DESKTOP
  WEB
}

model User {
  @@map("users")
  id String @id

  username    String    @unique
  displayname String?
  flags       String[]
  email       String    @unique
  password    String
  avatar      String?
  posts       Post[]
  joined      DateTime  @default(now())
  sessions    Session[]
}

model Session {
  @@map("sessions")
  session_id String @id @default(uuid())

  expiry            DateTime
  client_ip         String
  client_user_agent String
  client_app        Apps

  User              User?    @relation(fields: [user_id], references: [id])
  user_id           String?
}

model Post {
  @@map("posts")
  id      String   @id

  body    String
  images  String[]
  flags   String[]
  replies String[]
  posted  DateTime

  User   User?     @relation(fields: [author], references: [id])
  author String?
}
